<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:background="@android:color/darker_gray"
                android:focusable="true"
                android:padding="20dp">

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:gravity="center"
              android:minHeight="20dp"
              android:layout_centerHorizontal="true"
              android:id="@+id/input_tv"
              android:textColor="@android:color/white"
              android:text="输入法" android:textSize="14sp"/>

    <!--qr code-->
    <ImageView android:id="@+id/qrcode_imageview" android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@id/input_tv"
               android:layout_marginTop="10dp"
               android:layout_centerHorizontal="true"
               android:minWidth="100dp"
               android:minHeight="100dp"
               android:layout_gravity="center_horizontal"/>
</RelativeLayout>
